{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Empleados / Usuarios</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Rol</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.rol }}</td>
                <td>
                    <a href="{{ path('users_show', { 'id': entity.id }) }}" class="btn btn-info">Detalles</a>
                    <a href="{{ path('users_edit', { 'id': entity.id }) }}" class="btn btn-success">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a href="{{ path('users_new') }}" class="btn btn-danger">Nuevo Empleado</a>
    {% endblock %}
