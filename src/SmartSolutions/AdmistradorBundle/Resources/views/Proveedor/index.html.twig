{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Proveedor list</h1>

    <table class="responsive-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Razonsocial</th>
                <th>Representante</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.razonSocial }}</td>
                <td>{{ entity.representante }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.email }}</td>
                
                <td>

                    <a href="{{ path('proveedor_edit', { 'id': entity.id }) }}"><i class="medium material-icons">spellcheck</i></a>
                    {% if entity.isActive %}
                        <a href="{{ path('proveedor_state', { 'id': entity.id , 'state' : entity.isActive }) }}">
                        <i class="medium material-icons lock_open">lock_open</i></a>
                    {% else %}
                        <a href="{{ path('proveedor_state', { 'id': entity.id , 'state' : 'entity.isActive' }) }}">
                            <i class="medium material-icons lock_outline">lock_outline</i>
                        </a>
                    {% endif %}
                    <a href="{{ path('proveedor_delete', { 'id': entity.id }) }}" title="Editar"><i class="medium material-icons">delete</i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('proveedor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
