{% set menu = '::base.html.twig' %}
{% for rol in app.user.getRoles()  %}
    {% if rol == 'role_contador' %}
    {% set menu = '::Contador.html.twig' %}
{% endif %}
{% endfor %}
{% extends menu %}

{% block body %}
    
    <h1>CuentasTransacion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cuentastransacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.tipo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cuentastransacion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cuentastransacion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cuentastransacion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
