{% set menu = '::base.html.twig' %}
{% for rol in app.user.getRoles()  %}
    {% if rol == 'role_contador' %}
    {% set menu = '::Contador.html.twig' %}
{% endif %}
{% endfor %}
{% extends menu %}

{% block body %}
    <h1>CuentasTransacion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ entity.codigo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cuentastransacion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cuentastransacion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
